<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
 
    <class name="be.assign.Person" table="Person">
 
        <id name="id" column="ID">
        </id>
 
        <property name="name">
            <column name="NAME" />
        </property>
 
        <property name="surname">
            <column name="SURNAME" />
        </property>
 
        <property name="address">
            <column name="ADDRESS" />
        </property>
 
    </class>
</hibernate-mapping>